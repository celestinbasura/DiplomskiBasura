<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cele.diplomskibasura.app.Postavke">

    <TextView
        android:text="ACS 880"
        android:id="@+id/acs_880_txt"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:paddingTop="7dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/edt_acs880_ip"
        android:layout_marginLeft="10dp"
        android:text="192.168.0.100"
        />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"></LinearLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="PORT"
    android:paddingBottom="8dp"
    android:textSize="20sp"
    android:layout_gravity="center"
    android:gravity="center"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"

            android:layout_marginStart="50dp"
            android:id="@+id/edt_acs880_port"
            android:text="502"
            />


         </LinearLayout>




    <TextView
        android:text="SENTRON PAC3200"
        android:id="@+id/sentron_txt"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:paddingTop="7dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/edt_sentron_ip"
            android:layout_marginLeft="10dp"
            android:text="192.168.0.100"
            />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"></LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PORT"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"

            android:layout_marginStart="50dp"
            android:id="@+id/edt_sentron_port"
            android:text="502"
            />


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_settings"
        android:text="Spremi"
        android:textSize="25sp"
        android:layout_margin="20dp"/>
</LinearLayout>