<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffcff1ff"
    tools:context="com.cele.diplomskibasura.app.MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="Odabir upravljackog uredaja"
        android:textSize="35sp"
        android:textColor="#ff1e253b"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        android:text="ACS 880"
        android:background="@drawable/button_selector"
        android:textColor="#ffcff1ff"
        android:id="@+id/btn_acs_activity"
        android:textSize="30sp"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/button_selector"
        android:text="SENTRON PAC3200"
        android:textColor="#ffcff1ff"
        android:id="@+id/btn_sentron_activity"
        android:textSize="30sp"
        />



</LinearLayout>
